# draw mandelbrot set
x, y = 0, 0
nx, ny = 100, 50
xmin, ymin, xmax, ymax = -1.5, -1.5, 1.5, 1.5
dx = (xmax - xmin)/nx
dy = (ymax - ymin)/ny

iy = 0
loop {
	if iy >= ny {
		return
	}
	ix = 0
	loop {
		if ix >= nx {
			return
		}
		
		x = xmin + dx * ix
		y = ymin + dy * iy
		
		if in_mandel([x, y]) {
			print(".", end="")
		} else {
			print("#", end="")
		}

		ix = ix + 1
	}
	print("")
	iy = iy + 1
}
